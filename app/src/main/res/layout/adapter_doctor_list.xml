<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_adl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_adl_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <ImageView
            android:id="@+id/iv_doctor_mug_shot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="@+id/gl_adl_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_doctor_name"
            style="@style/tv_doctor_list"
            app:layout_constraintStart_toStartOf="@+id/gl_adl_left"
            app:layout_constraintTop_toTopOf="@+id/iv_doctor_mug_shot"
            tools:text="王天寶 醫師" />

        <TextView
            android:id="@+id/tv_doctor_skill"
            style="@style/tv_doctor_list"
            app:layout_constraintStart_toStartOf="@+id/gl_adl_left"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="經歷: 台大醫院心臟科副主任、三軍總醫院心臟科醫師\n"/>

        <TextView
            android:id="@+id/tv_doctor_specialty"
            style="@style/tv_doctor_list"
            app:layout_constraintStart_toStartOf="@+id/gl_adl_left"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_skill"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="專長: 心血管專科、術後復健、自律神經" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_reserve_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="預約諮詢"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#E7CFB7"
        app:layout_constraintTop_toBottomOf="@+id/cl_adl_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>