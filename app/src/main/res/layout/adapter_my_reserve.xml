<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:background="@color/theme_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/reserve_tv_1"
        android:background="@color/theme_bg"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_title"
        tools:text="2022年11月22日(六)" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/reserve_tv_2"
        android:background="@color/theme_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_date"
        app:layout_constraintTop_toTopOf="@+id/tv_date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date"
        tools:text="午診" />

    <TextView
        android:id="@+id/tv_question"
        style="@style/reserve_tv_3"
        android:text="填寫問卷"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_title" />

    <TextView
        android:id="@+id/tv_division"
        style="@style/reserve_tv_1"
        android:layout_marginTop="1dp"
        android:background="@color/theme_bg_light"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        tools:text="神經科" />

    <TextView
        android:id="@+id/tv_doctor"
        style="@style/reserve_tv_2"
        android:gravity="center_vertical"
        android:background="@color/theme_bg_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_division"
        app:layout_constraintTop_toTopOf="@+id/tv_division"
        app:layout_constraintBottom_toBottomOf="@+id/tv_division"
        tools:text="王天寶" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/reserve_tv_3"
        android:text="看診查詢"
        app:layout_constraintBottom_toBottomOf="@+id/tv_division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_division" />
</androidx.constraintlayout.widget.ConstraintLayout>