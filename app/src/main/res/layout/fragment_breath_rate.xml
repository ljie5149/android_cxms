<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.watch.BreathRateFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/breath_rate_background_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_rounded_yellow"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/breath_rate_imageView"
                style="@style/ivHomeTabIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_breath_rate"
                app:layout_constraintBottom_toBottomOf="@+id/breath_rate_background_imageView"
                app:layout_constraintEnd_toEndOf="@+id/breath_rate_background_imageView"
                app:layout_constraintStart_toStartOf="@+id/breath_rate_background_imageView"
                app:layout_constraintTop_toTopOf="@+id/breath_rate_background_imageView" />

            <TextView
                android:id="@+id/breath_rate_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/circle_breath_rate"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/breath_rate_imageView"
                app:layout_constraintStart_toEndOf="@+id/breath_rate_imageView"
                app:layout_constraintTop_toTopOf="@+id/breath_rate_imageView" />

            <TextView
                android:id="@+id/breath_rate_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="-"
                app:layout_constraintStart_toStartOf="@+id/breath_rate_title_textView"
                app:layout_constraintTop_toBottomOf="@+id/breath_rate_title_textView" />

            <TextView
                android:id="@+id/breath_rate_value_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/c_CC6600_100"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/breath_rate_title_textView"
                app:layout_constraintEnd_toStartOf="@+id/textView29"
                app:layout_constraintTop_toTopOf="@+id/breath_rate_title_textView" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:text="@string/unit_per_minute_time"
                android:textColor="@color/c_CC6600_100"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/breath_rate_value_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/breath_rate_value_textView" />

            <View
                android:id="@+id/divide1_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:alpha="0.3"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breath_rate_value_textView" />

            <TextView
                android:id="@+id/breath_rate_subTitle1_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/title_breath_rate_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divide1_view" />

            <com.jotangi.cxms.ui.home.bar.ColorBarChartView
                android:id="@+id/breath_rate_chartView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breath_rate_subTitle1_textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>