<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_background_grey"
    android:elevation="2dp"
    android:layout_marginBottom="10dp">
<LinearLayout
    android:id="@+id/project_container"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#000000"
        android:id="@+id/tvProject_txt"
        android:text="預約項目 | 次數"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
    <TextView
        android:textColor="#000000"
        android:text="EECP"
        android:id="@+id/tvProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />
</LinearLayout>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/time_container"
app:layout_constraintTop_toBottomOf="@id/project_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvDate_txt"
            android:text="預約日期時間"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    <TextView
        android:textColor="#000000"
        android:text="2024-12-13 19:00"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/name_container"
        app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvName_txt"
            android:text="預約者姓名"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    <TextView
        android:textColor="#000000"
        android:text="王小明"
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/phone_container"
app:layout_constraintTop_toBottomOf="@id/name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvPhone_txt"
            android:text="預約者電話"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    <TextView
        android:textColor="#000000"

        android:text="0938730916"
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btnAction"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="取消預約"
        android:singleLine="false"
        android:textSize="11sp"
        android:background="@drawable/button_rounded_blue"
        android:textColor="@android:color/white"
        />


    <TextView
        android:text="已取消"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#22496B"
        android:visibility="gone" />

    <TextView
        android:text="10/10"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#22496B"
        android:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
