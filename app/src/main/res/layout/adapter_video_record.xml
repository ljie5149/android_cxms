<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_avr_end22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_avr_start"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_avr_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <ImageView
            android:id="@+id/iv_avr_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="@+id/gl_avr_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/tv_clinic_title"
            style="@style/adapter_video_record_tv"
            android:text="諮詢對象："
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/gl_avr_start"
            app:layout_constraintTop_toTopOf="@+id/iv_avr_icon" />

        <TextView
            android:id="@+id/tv_clinic_content"
            style="@style/adapter_video_record_tv"
            app:layout_constraintStart_toEndOf="@+id/tv_clinic_title"
            app:layout_constraintTop_toTopOf="@+id/tv_clinic_title" />

        <TextView
            android:id="@+id/tv_time_title"
            style="@style/adapter_video_record_tv"
            android:text="預約時段："
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/gl_avr_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_clinic_title" />

        <TextView
            android:id="@+id/tv_time_content"
            style="@style/adapter_video_record_tv"
            app:layout_constraintStart_toEndOf="@+id/tv_time_title"
            app:layout_constraintTop_toTopOf="@+id/tv_time_title" />

        <TextView
            android:id="@+id/tv_name_title"
            style="@style/adapter_video_record_tv"
            android:text="預約姓名："
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/gl_avr_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_title" />

        <TextView
            android:id="@+id/tv_name_content"
            style="@style/adapter_video_record_tv"
            app:layout_constraintStart_toEndOf="@+id/tv_name_title"
            app:layout_constraintTop_toTopOf="@+id/tv_name_title" />

        <TextView
            android:id="@+id/tv_person_title"
            style="@style/adapter_video_record_tv"
            android:text="診前資訊編輯"
            android:textColor="@color/blue"
            android:layout_margin="4dp"
            app:layout_constraintStart_toStartOf="@+id/gl_avr_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_status_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="狀態不明"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        app:layout_constraintEnd_toEndOf="@+id/gl_avr_end22"/>

    <TextView
        android:id="@+id/tv_cancel_button"
        style="@style/adapter_video_record_tv"
        android:text="預約取消"
        app:layout_constraintStart_toStartOf="@+id/gl_avr_end22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_status_button"
        app:layout_constraintTop_toTopOf="@+id/tv_status_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>